// SERVER.C

#include <stdio.h>
#include <string.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <unistd.h>

int main() {
    const char *myfifo = "/tmp/myfifo";
    mkfifo(myfifo, 0666);
    char str1[80];

    while (1) {
        int fd = open(myfifo, O_RDONLY);
        if (fd == -1) {
            perror("Error opening FIFO for reading");
            return 1;
        }
        read(fd, str1, sizeof(str1));
        printf("User1: %s\n", str1);
        close(fd);
    }

    return 0;
}


 /*
To compile and run the server program, use the following commands:
1. Compile the server: gcc server.c -o server
2. Run the server: ./server
*/



// CLIENT.c

#include <stdio.h>
#include <string.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <unistd.h>

int main() {
    const char *myfifo = "/tmp/myfifo";
    char str2[80];

    while (1) {
        int fd = open(myfifo, O_WRONLY);
        if (fd == -1) {
            perror("Error opening FIFO for writing");
            return 1;
        }
        fgets(str2, sizeof(str2), stdin);
        write(fd, str2, strlen(str2) + 1);
        close(fd);
    }

    return 0;
}


/*
To compile and run the client program, use the following commands:
1. Compile the client:  gcc client.c -o client
2. Run the client: ./client
*/
